{
  "name": "harperdb-connect",
  "version": "1.0.1",
  "description": "Node.JS module for connecting to HarperDB and simplifying HTTP requests.",
  "main": "harperdb-connect.js",
  "scripts": {
    "test": "jest",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "docs:prepare": "gitbook install",
    "docs:watch": "npm run docs:prepare && gitbook serve"
  },
  "lint-staged": {
    "*.{test.js,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ethan-Arrowood/harperdb-connect.git"
  },
  "keywords": [
    "nodejs",
    "harperdb",
    "database",
    "http",
    "request",
    "es6"
  ],
  "author": "Ethan Arrowood",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ethan-Arrowood/harperdb-connect/issues"
  },
  "homepage": "https://github.com/Ethan-Arrowood/harperdb-connect#readme",
  "devDependencies": {
    "coveralls": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.3",
    "nock": "^9.3.0",
    "prettier": "^1.13.4"
  },
  "dependencies": {
    "lodash.merge": "^4.6.1",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
